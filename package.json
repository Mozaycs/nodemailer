{
  "name": "@reactioncommerce/nodemailer",
  "version": "5.0.0",
  "description": "Easy e-mail sending from your Node.js applications",
  "main": "dist/nodemailer.js",
  "scripts": {
    "build": "rimraf ./dist && babel src -d ./dist --copy-files",
    "lint": "eslint ./src ./test",
    "lintfix": "eslint ./src ./test --fix",
    "prepublish": "npm run build",
    "test": "mocha test/**/*-test.js --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reactioncommerce/nodemailer.git"
  },
  "keywords": [
    "Nodemailer",
    "Reaction",
    "Reaction Commerce"
  ],
  "author": "Reaction Commerce",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reactioncommerce/nodemailer/issues"
  },
  "homepage": "https://reactioncommerce.com/",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "bunyan": "^2.0.0",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-plugin-babel": "^4.1.1",
    "libbase64": "^0.2.0",
    "libmime": "^3.1.0",
    "libqp": "^1.1.0",
    "mocha": "^3.2.0",
    "proxy": "^0.2.4",
    "proxy-test-server": "^1.0.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.4",
    "smtp-server": "^3.0.1"
  }
}
